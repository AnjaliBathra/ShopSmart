{

    "manifest_version": 2,
    "name": "Shopessential",
    "version": "1.0",
    "description": "Rationalize your online shopping decisions.",
    "icons": {
        "128": "images/logo.png",
        "48": "images/logo.png",
        "16": "images/logo.png"
    },
    
    "browser_action":{
        "default_icon": "images/logo.png",
        "default_popup": "html/popup.html",
        "default_title": "Shopessential"
    },
    
    "options_page" : "html/options.html",
    
    "background": {
        "page" : "html/background.html",
        "persistent": false
    
    },
    
    "content_scripts": [
        {
            "matches": ["https://www.amazon.com/*"],
            "js": ["js/content.js", "js/storage.js"],
            "css": ["css/content.css", "css/check.css"]
        }
        
    ],
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "tabs",
        "https://www.amazon.com/*" 
        ]
        ,
        "web_accessible_resources": ["html/content.html", "html/check.html"]
    }
    